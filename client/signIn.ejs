<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <form action="/" method="POST">
            <h1 class="mb-3 text-center">Sign in</h1>
            <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username"
                    autocomplete="off">
                <label for="username">Username</label>
            </div>
            <div class="row">
                <div class="col text-center text-danger mb-3" id="username-error">

                </div>
            </div>


            <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                <label for="password">Password</label>
            </div>
            <div class="row">
                <div class="col text-center text-danger mb-3" id="password-error">

                </div>
            </div>

            <div class="row">
                <div class="col text-center text-danger" id="error">
                    <% if(error) { %>
                        <%= error %>
                            <% } %>
                </div>
            </div>

            <div class="form-group text-center">
                <button class="btn btn-primary m-3">Continue</button>
            </div>
        </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script>
        const validate=(username,password)=>{
            document.querySelector('#username-error').innerHTML="";
            document.querySelector('#password-error').innerHTML="";
            let returnValue=true;
            if(username.length==0){
                document.querySelector('#username-error').innerHTML="Please enter a Username";
                returnValue=false;
            }

            if(password.length<6){
                document.querySelector('#password-error').innerHTML="Enter a valid Password";
                returnValue=false;
            }
            
            return returnValue;

        }

        const form=document.querySelector('form');


        form.addEventListener('submit',(e)=>{
            e.preventDefault();
            const username=form.elements.username.value;
            const password=form.elements.password.value;

            if(validate(username,password))
                form.submit();
            
            
        })
    </script>
    
</body>
</html>